.CodeMirror-scroll
  height 455px !important // 避免编辑内容超出外部，限定编辑区域的高度。

.file-info
  position relative
  height 40px
  width 100%
  box-sizing border-box
  display flex
  justify-content space-between
  align-items center

// 编辑器默认是圆角，这里给替换掉。
.editor-toolbar
  border-radius 0
  border none
  border-top 1px solid #ccc

.file-info-title
  position relative
  width calc(100% - 50px)
  height 100%
  box-sizing border-box
  padding 0 20px
  display flex
  align-items center
  font-weight bold
  font-size 16px

.file-info-title-edit
  position relative
  width calc(100% - 70px - 20px)
  height 100%
  box-sizing border-box
  padding 0 20px
  outline-style none // 隐藏输入框外部样式
  outline-width 0 // 隐藏输入框外部样式
  border none // 隐藏输入框外部样式
  outline-color transparent // 隐藏输入框外部样式
  box-shadow none // 隐藏输入框外部样式

.file-info-title-edit-err
  position relative
  width calc(100% - 70px - 20px)
  height 100%
  box-sizing border-box
  padding 0 20px
  outline-style none // 隐藏输入框外部样式
  outline-width 0 // 隐藏输入框外部样式
  border none // 隐藏输入框外部样式
  outline-color transparent // 隐藏输入框外部样式
  box-shadow none // 隐藏输入框外部样式
  color red

.file-info-icon
  position relative
  width 70px
  height 50%
  box-sizing border-box
  margin-right 20px
  display flex
  justify-content center
  align-items center
  cursor pointer
  background #eee
  border-radius 10px
  font-size 14px


.file-info-time
  position relative
  width 100%
  height 20px
  line-height 20px
  box-sizing border-box
  padding-left 20px
  font-size 12px
  color #aaa

